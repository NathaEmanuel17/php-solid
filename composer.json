{
  "name": "seuuser/minha-app",
  "type": "project",
  "require": {
    "php": "^8.1",
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1"
  },
  "autoload": {
    "psr-4": {
      "App\\": ["app/", "src/"]
    }
  },
  "autoload-dev": { "psr-4": { "Tests\\": "tests/" } },
  "scripts": {
    "serve": "php -S 0.0.0.0:8000 -t public",
    "post-install-cmd": ["@composer dump-autoload"],
    "post-update-cmd": ["@composer dump-autoload"],
    "test": "phpunit"
  },
  "require-dev": {
    "phpunit/phpunit": "^10"
  }
}
